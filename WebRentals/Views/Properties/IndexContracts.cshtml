@model IEnumerable<Web_ManagementHouseRentals.Data.Entities.Contract>

@{
    ViewData["Title"] = "IndexContracts";
}
<br />
<br />
<br />
<br />
<br />
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h4 class="m-0 font-weight-bold text-primary">List of Contracts</h4>
    </div>
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success" role="alert">
            <center><h6>@ViewBag.Message</h6></center>
        </div>
    }
    <div class="card-body">
        <div class="table-responsive justify-content-center">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Property.Owner)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Tenant)
                        </th>
                        <th>
                            Property @Html.DisplayNameFor(model => model.Property.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Start)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Property.Owner.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tenant.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Property.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Start)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>