@model IEnumerable<Web_ManagementHouseRentals.Data.Property>

@{
    ViewData["Title"] = "IndexCustomers";
}


<h1>Properties</h1>

<!--/ Intro Single star /-->
<section class="intro-single">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-8">
                <div class="title-single-box">
                    <h1 class="title-single">My properties</h1>
                    <span class="color-text-a"></span>
                </div>
            </div>
        </div>
    </div>
</section>
<!--/ Intro Single End /-->
<div class="container">
    <a asp-action="Create" class="btn btn-success mb-3">Create New Property</a>
    <table class="table" id="indexPropertyCustomerTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NameProperty)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Area)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MonthlyPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.District)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NameProperty)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Area)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MonthlyPrice)€
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.District)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" title="Edit" class="btn btn-outline-warning fa fa-edit"></a>
                        <a asp-action="Details" asp-route-id="@item.Id" title="Details" class="btn btn-outline-success fa fa-info-circle"></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" title="Delete" class="btn btn-outline-danger fa fa-trash"></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>