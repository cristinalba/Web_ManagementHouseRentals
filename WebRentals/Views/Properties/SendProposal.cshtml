@model Web_ManagementHouseRentals.Models.CreateProposalViewModel

@{
    ViewData["Title"] = "SendProposal";
}

<!--/ Intro Single star /-->
<section class="intro-single">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-8">
                <div class="title-single-box">
                    <h1 class="title-single">Contact page</h1>
                    <span class="color-text-a"></span>
                </div>
            </div>

        </div>
    </div>
</section>
<!--/ Intro Single End /-->
<div class="col-md-12">
    <div class="row section-t3">
        <div class="col-sm-12">
            <h2 class="text-center mb-5">Contact @Model.OwnerName</h2>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-12 col-lg-4">
            <div class="property-contact">
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success" role="alert">
                        <center><h6>@ViewBag.Message</h6></center>
                    </div>
                }
                <form class="form-a" method="post">
                    <input type="hidden" asp-for="PropertyId" />
                    <input type="hidden" asp-for="OwnerName" />
                    <div class="row">
                        <div class="col-md-12 mb-1">
                            <div class="form-group">
                                <input asp-for="Name" type="text" class="form-control form-control-lg form-control-a" id="inputName" placeholder="Name *" required>
                            </div>
                        </div>
                        <div class="col-md-12 mb-1">
                            <div class="form-group">
                                <input asp-for="Email" type="email" class="form-control form-control-lg form-control-a" id="inputEmail1" placeholder="Email *" required>
                            </div>
                        </div>
                        <div class="col-md-12 mb-1">
                            <div class="form-group">
                                <textarea asp-for="Message" id="textMessage" class="form-control" placeholder="Comment *" name="message" cols="45" rows="8" required></textarea>
                            </div>
                        </div>
                        <div class="col-md-12 text-center">
                            <input type="submit" value="Send Message" class="btn btn-a" />
                        </div>
                    </div>
                </form>
                <div class=" container text-center">
                    <a asp-action="Details" asp-route-id="@Model.PropertyId">Back to details</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!--/ Property Single End /-->