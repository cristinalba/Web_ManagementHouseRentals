@model Web_ManagementHouseRentals.Models.RegisterNewUserViewModel

@{
    ViewData["Title"] = "Register";
}

<!--/ Intro Single star /-->
<section class="intro-single">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-8">
                <div class="title-single-box">
                    <h1 class="title-single">Sign In</h1>
                </div>
            </div>
            <div class="col-md-12 col-lg-4">
                <nav aria-label="breadcrumb" class="breadcrumb-box d-flex justify-content-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Sign In
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>
<!--/ Intro Single End /-->
<!--/ Signin Form /-->
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 col-lg-10">
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success" role="alert">
                        <center><h5>@ViewBag.Message</h5></center>
                    </div>
                }
                @if (ViewBag.MessageZipCode != null)
                {
                    <div class="alert alert-warning" role="alert">
                        <center><h5>@ViewBag.MessageZipCode</h5></center>
                    </div>
                }
                <div class="login-wrap p-4 p-md-5">
                    <form method="post" class="signin-form">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="d-flex">
                            <div class="form-group mb-3 mr-5 w-50" style="width: 40%;">
                                <label asp-for="FirstName" class="label" for="firstName">First Name</label>
                                <input asp-for="FirstName" type="text" class="form-control">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3 w-50" style="width: 40%;">
                                <label asp-for="LastName" class="label" for="lastName">Last Name</label>
                                <input asp-for="LastName" type="text" class="form-control">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Username" class="label" for="email">Email</label>
                            <input asp-for="Username" type="Email" class="form-control" placeholder="example@example.com">
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="d-flex">
                            <div class="form-group mb-3 mr-5 w-50">
                                <label asp-for="BirthDate" class="label" for="birthDate">Birth Date</label>
                                <input asp-for="BirthDate" type="Date" class="form-control">
                                <span asp-validation-for="BirthDate" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3 w-50">
                                <label asp-for="Phone" class="label" for="phoneNumber">Phone Number</label>
                                <input asp-for="Phone" type="number" class="form-control" placeholder="Ex: 912345678">
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="d-flex">
                            <div class="form-group mb-3 mr-5 w-50">
                                <label asp-for="CC" class="label" for="cc">CC</label>
                                <input asp-for="CC" type="number" class="form-control">
                                <span asp-validation-for="CC" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3 w-50">
                                <label asp-for="NIF" class="label" for="nif">NIF</label>
                                <input asp-for="NIF" type="number" class="form-control">
                                <span asp-validation-for="NIF" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="d-flex">
                            <div class="form-group mb-3 mr-5 w-75">
                                <label asp-for="Address" class="label" for="address">Address</label>
                                <input asp-for="Address" type="text" class="form-control" placeholder="Rua Jau, Nº31">
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="ZipCode" class="label" for="zipCode">Zip-Code</label>
                                <input asp-for="ZipCode" type="text" class="form-control" placeholder="Ex: 1300-312">
                                <span asp-validation-for="ZipCode" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Password" class="label" for="password">Password</label>
                            <input asp-for="Password" type="password" class="form-control">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Confirm" class="label" for="password">Password Confirmation</label>
                            <input asp-for="Confirm" type="password" class="form-control">
                            <span asp-validation-for="Confirm" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Sign In" class="form-control btn btn-success rounded submit px-3" />
                        </div>
                        <div class="form-group d-md-flex">
                        </div>
                    </form>
                    <p class="text-center">Already a member? <a href="login.html">Login</a></p>
                </div>
            </div>
        </div>
    </div>
</section>
<!--/ Singin Form end /-->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}