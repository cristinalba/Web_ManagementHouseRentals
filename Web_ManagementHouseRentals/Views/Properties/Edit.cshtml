@model Web_ManagementHouseRentals.Models.EditPropertyViewModel

@{
    ViewData["Title"] = "Edit Property";
}

<!--/ Intro Single star /-->
<section class="intro-single">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-8">
                <div class="title-single-box">
                    <h1 class="title-single">Edit Ad</h1>
                </div>
            </div>
            <div class="col-md-12 col-lg-4">
                <nav aria-label="breadcrumb" class="breadcrumb-box d-flex justify-content-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Edit Ad
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>
<!--/ Intro Single End /-->
<!--/ Signin Form /-->
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 col-lg-10">
                @*<div class="text-success">
                        <center>
                            <p>
                                @ViewBag.Message
                            </p>
                        </center>
                    </div>*@

                @*<div class="text-success mb-2"><h5>@ViewBag.Message</h5></div>*@

                <div class="login-wrap p-4 p-md-5">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="d-flex">
                            <div class="form-group mb-3 mr-5 w-50">
                                <label asp-for="MonthlyPrice" class="control-label"></label>
                                <input asp-for="MonthlyPrice" class="form-control" />
                                <span asp-validation-for="MonthlyPrice" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3 w-50">
                                <label asp-for="ImageFile" class="control-label"></label>
                                <input asp-for="ImageFile" class="form-control" type="file" />
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-group">
                                <input type="submit" value="Save" class="form-control btn btn-success rounded submit px-3" />
                            </div>
                        </div>
                    </form>
                    <div>
                        <a asp-action="Index" class="btn">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
