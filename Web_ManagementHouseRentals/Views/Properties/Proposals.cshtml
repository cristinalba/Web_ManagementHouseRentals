@model IEnumerable<Common.Data.Entities.Proposal>

@{
    ViewData["Title"] = "Proposals";
}

<h1>Proposals</h1>

<!--/ Intro Single star /-->
<section class="intro-single">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-8">
                <div class="title-single-box">
                    <h1 class="title-single">My proposals</h1>
                    <span class="color-text-a"></span>
                </div>
            </div>
        </div>
    </div>
</section>
<!--/ Intro Single End /-->
<div class="container">
    <table class="table" id="myProposals">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Client.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.property.NameProperty)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProposalDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.proposalState)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Client.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.property.NameProperty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProposalDate)
                </td>
                @if (item.proposalState.Id == 1)
                {
                    <td class="text-success">
                        @Html.DisplayFor(modelItem => item.proposalState.State)
                    </td>
                }
                else if (item.proposalState.Id == 2)
                {
                    <td class="text-primary">
                        @Html.DisplayFor(modelItem => item.proposalState.State)
                    </td>
                }
                else if (item.proposalState.Id == 3)
                {
                    <td class="text-info">
                        @Html.DisplayFor(modelItem => item.proposalState.State)
                    </td>
                }
                else if (item.proposalState.Id == 4)
                {
                    <td class="text-danger">
                        @Html.DisplayFor(modelItem => item.proposalState.State)
                    </td>
                }
                else if (item.proposalState.Id == 5)
                {
                    <td class="text-warning">
                        @Html.DisplayFor(modelItem => item.proposalState.State)
                    </td>
                }

                <td>
                    <a class="btn btn-warning btn-icon-split btn-sm" asp-action="ProposalDetails" asp-route-id="@item.Id">
                        <span class="text">See proposal</span>
                    </a>
                    <a class="btn btn-danger btn-icon-split btn-sm" asp-action="DeleteProposal" asp-route-id="@item.Id">
                        Delete <i class="fa fa-trash"></i>
                    </a>

                </td>
            </tr>
            }
        </tbody>
    </table>
</div>